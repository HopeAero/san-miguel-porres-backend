{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger"],
    "deleteOutDir": true,
    "assets": ["modules/mails/templates/**/*"],
    "watchAssets": true,
    "builder": "swc",
    "typeCheck": true
  }
}